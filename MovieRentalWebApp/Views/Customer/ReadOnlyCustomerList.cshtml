@model IEnumerable<MovieRentalWebApp.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Customers</h3>
<hr />
<p>@Html.ActionLink("New Customer", "New", "Customer", new { @class = "btn btn-primary" })</p>
<hr />
@if (!Model.Any())
{
    <p>There is no customer registered!</p>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Detail", "Customer", new { id = customer.Id }, null)</td>
                    <td>@customer.Membershiptype.Name</td>
                    <td>@customer.Membershiptype.DiscountRate %</td>
                </tr>
            }
        </tbody>
    </table>
}

